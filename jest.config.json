{
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/*.test.(ts|tsx)"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/jest.setup.ts"
  ],
  "moduleNameMapper": {
    "\\.(css|less)$": "identity-obj-proxy"
  },
  "collectCoverageFrom": [
    "./src/**"
  ],
  "coveragePathIgnorePatterns": [
    "./src/__tests__/*",
    "./src/navigation/*"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 80
    }
  }
}